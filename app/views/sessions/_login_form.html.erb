<h1>Login</h1>

<% if @errors %>
  <ul>
    <li><%= @errors %></li>
<% end %>
  </ul>

<div id="login-form-container">
  <%= form_tag '/login' do %>
    <%= label_tag(:email, "email") %>
    <%= email_field_tag :email %>
    <%= label_tag(:password, "password") %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login!" %>
  <% end %>
</div>